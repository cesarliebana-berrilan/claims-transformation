@page "/me"
@attribute [Authorize]

@inject ApiService apiService;

<PageTitle>Me</PageTitle>

<h1>Me</h1>

<ul>
    <li>Name: @response.Name</li>
    <li>Customer: @response.CustomerId</li>
    <li>License: @response.License</li>
    <li>Role: @response.Role</li>
</ul>

@code {
    private GetMeResponse response;

    protected override async Task OnInitializedAsync()
    {
        response = await apiService.GetMe();
        //response = new(Guid.NewGuid(), "admin", "enterprise", "name");
    }
}

